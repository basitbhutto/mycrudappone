@model Student_Information.Models.Student

<h3>create student</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger">   </div>
            <div class="form-group">
                <label asp-for="Student_id" class="custom-control-label"></label>
                <input asp-for="Student_id" class="form-control" />
                <span asp-validation-for="Student_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fullname" class="custom-control-label"></label>
                <input asp-for="fullname" class="form-control" />
                <span asp-validation-for="fullname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="degree_title" class="custom-control-label"></label>
                <input asp-for="degree_title" class="form-control" />
                <span asp-validation-for="degree_title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="address" class="custom-control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="phone" class="custom-control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit"value="create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}